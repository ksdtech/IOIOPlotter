<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select page size:" />

    <RadioGroup
        android:id="@+id/select_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/full_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Full page" />

        <RadioButton
            android:id="@+id/top_half"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top half" />

        <RadioButton
            android:id="@+id/bottom_half"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom half" />

        <RadioButton
            android:id="@+id/custom_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom:" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="("
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/xmin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="number"
            android:text="150" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/ymin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="number"
            android:text="330" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=") ; ("
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/xmax"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="number"
            android:text="604" />

        <EditText
            android:id="@+id/ymax"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="number"
            android:text="850" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=")"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

</LinearLayout>